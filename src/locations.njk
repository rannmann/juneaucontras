---
layout: layouts/base.njk
title: Locations
---

<div class="schedule-container">
    <h2>Dance Locations</h2>
    
    <div class="locations-grid">
        {% for location in collections.locations %}
        <div class="location-card">
            <h3>{{ location.data.title }}</h3>
            <div class="location-details">
                <p><strong>Address:</strong> {{ location.data.address }}</p>
                {% if location.data.schedule %}
                <p><strong>Schedule:</strong> {{ location.data.schedule }}</p>
                {% endif %}
                {% if location.data.mapLink %}
                <p><a href="{{ location.data.mapLink }}" target="_blank">View on Map</a></p>
                {% endif %}
                {% if location.content %}
                {{ location.content | safe }}
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    
    <div class="location-notes">
        <h3>General Information</h3>
        <ul>
            <li>Check the <a href="/schedule/">dance schedule</a> for specific location information for each event</li>
        </ul>
    </div>
</div>