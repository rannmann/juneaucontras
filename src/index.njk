---
layout: layouts/base.njk
title: Home
---

<div class="hero">
    <h2>{{ home.heroTitle }}</h2>
    <p>{{ home.heroSubtitle }}</p>
</div>

<div class="features">
    {% for feature in home.features %}
    <div class="feature-box">
        <h3>{{ feature.title }}</h3>
        {% if feature.title == "Camp Damp 2025" and settings.campDamp.cancelled %}
        <p class="text-danger" style="font-size: 1.2em;"><strong>{{ settings.campDamp.cancellationNotice }}</strong></p>
        {% endif %}
        <p>{{ feature.content | safe }}</p>
        {% if feature.linkText and feature.linkUrl %}
        <p><a href="{{ feature.linkUrl }}">{{ feature.linkText }}</a></p>
        {% endif %}
    </div>
    {% endfor %}
</div>